@{
    //Set the title
    ViewData["Title"] = "Grade Calculator";
}

@* Import access to my models *@
@model GradesModel;
<!--I did a lot of bootstrap styling before I heard we didn't have to. I took most of it out but couldn't
bear for the form to go back to looking hideous so I left in the form-group class-->
<div class="form-group calcGrade">
    <h1>Grade Calculator</h1>

    <!--This is the form for calculating grades. I'm using asp-for to validate all the entries and asp-validation-summary
        to display the errors from mis-inputs -->
    <form class="form" method="post">
        <i>For all Assignments enter in the percent scored:</i><br><br>
        <label for="assignments">Assignments:</label>
        <input class="textbox" type="text" id="assignments" asp-for="Assignments">
        <br>
        <label for="groupproject">Group Project:</label>
        <input class="textbox" type="text" id="groupproject" asp-for="Group_Project">
        <br>
        <label for="quizzes">Quizzes:</label>
        <input class="textbox" type="text" id="quizzes" asp-for="Quizzes">
        <br>
        <label for="midtermexam">Midterm Exam:</label>
        <input class="textbox" type="text" id="midtermexam" asp-for="Midterm_Exam">
        <br>
        <label for="finalexam">Final Exam:</label>
        <input class="textbox" type="text" id="finalexam" asp-for="Final_Exam">
        <br>
        <label for="intex">INTEX:</label>
        <input class="textbox" type="text" id="intex" asp-for="Intex">
        <br>
        <input class="btn-primary btn-lg" type="submit" value="Calculate" id="button">
        <div asp-validation-summary="All"></div>
    </form>

    <br>


</div>

<!--Slot to output grade-->
<h3>Grade: <label id="result"></label></h3>

<!--My JQuery File and the library-->
<script src="~/lib/jquery-3.6.3.min.js"></script>
<script src="~/js/main.js"></script>
